<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/language_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_language"
        android:textSize="24sp"
        android:layout_marginBottom="24dp" />

    <!-- Polski -->
    <LinearLayout
        android:id="@+id/button_polish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:onClick="onPolishClick"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_flag_pl"
            android:contentDescription="@string/language_pl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_pl"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Angielski -->
    <LinearLayout
        android:id="@+id/button_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_button"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:onClick="onEnglishClick">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_flag_eng"
            android:contentDescription="@string/language_en" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_en"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</LinearLayout>
